<section class="container-fluid py-5">
    <div class="container mt-5">
        <div class="row min-vh-100 justify-content-center align-items-center">
            <div class="col-12">
                <h2 class="text-center text-capitalize fw-bold">editar perfil</h2>
            </div>
            <div class="card p-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-6 text-center">
                            <img height="300px" class="m-3 rounded-circle" src="https://fotos-ayvisa.s3.eu-west-3.amazonaws.com/wp-content/uploads/2021/02/23202742/descargar-foto-perfil-instagram.jpg" alt="Foto de perfil">
                        </div>
                        <div class="col-12 col-md-6">
                            <form action="">
                                <div class="mb-3">
                                    <label for="nombre" class="form-label fw-bold">Nombres</label>
                                    <input type="text" class="form-control" id="nombre_perfil" name="nombre_perfil" placeholder="Ingrese los nombres">
                                </div>
                                <div class="mb-3">
                                    <label for="apellido_p" class="form-label fw-bold">Apellidos</label>
                                    <input type="text" class="form-control" id="apellido_perfil" name="apellido_perfil"  placeholder="Ingrese los apellidos">
                                </div>
                                <div class="mb-3">
                                    <label for="correo" class="form-label fw-bold">Correo</label>
                                    <input type="email" class="form-control" id="email_usuario" name="email_usuario" placeholder="Ingrese el correo">
                                </div>
                            </form>
                        </div>
                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-secondary-eco text-uppercase m-2">guardar</button>
                            <button type="submit" class="btn btn-secondary-eco text-uppercase m-2">cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>